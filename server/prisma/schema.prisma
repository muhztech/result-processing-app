// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  regNumber String   @unique
  level     String   @default("ND1") // âœ… Default set to allow migrations
  results   Result[]
}

model Result {
  id        Int     @id @default(autoincrement())
  student   Student @relation(fields: [studentId], references: [id])
  studentId Int

  course String // required again

  ca       Int
  exam     Int
  total    Int
  grade    String
  remark   String
  semester Int
}

model Course {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  password String
}
